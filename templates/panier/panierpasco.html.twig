{% extends 'base.html.twig' %}

{% block title %}
  Votre Panier
{% endblock %}

{% block body %}

<div class="container">
  <div class="bg-light p-3">
    <h1> Votre Panier </h1>
  </div>
  {% for message in app.flashes('stock') %}
    <div class="alert alert-danger">
        {{ message }}
    </div>
{% endfor %}
{% for message in app.flashes('stock') %}
    <div class="alert alert-danger">
        {{ message }}
    </div>
{% endfor %}
{% for message in app.flashes('commandeOk') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
  {% if items | length > 0 %}
    <table class='table'>
      <thead>
        <tr>
          <th>Produit</th>
          <th>Prix</th>
          <th>Quantité</th>
          <th>Total</th>
          <th></th>
        </tr>
      </thead>
      <tbody>

        {% for item in items %}
          <tr>
            <td>{{ item.produit.nom }}</td>
            <td>{{ item.produit.prix }} €</td>
            <td> <a href="{{ path('cart_rmvpasco_fpanier', {id: item.produit.id})}}" class="btn btn-success btn-sm" >-
              </a> {{ item.quantite }} <a href="{{ path('cart_addpasco_fpanier', {id: item.produit.id})}}" class="btn btn-success btn-sm" >+
              </a></td>
            <td>{{ item.produit.prix * item.quantite }} €</td>
            <td>
              <a href="{{ path('cart_removepasco', {id: item.produit.id})}}" class="btn btn-danger btn-sm" >Supprimer
              </a>
            </td>
          </tr>
          
        {% endfor %}
      </tbody>
      <tfoot>
        <tr>
          <td colspan="3" class="text-right font-weight-bold">Total :</td>
          <td>{{ total }} €</td>
          <td></td>
        </tr>
      </tfoot>
    </table>
    <div class="text-center">
    <a href={{path('app_login')}} class="btn btn-success">Valider la commande</a>
    </div>
  {% else %}
    <p>Surprise, c'est vide !</p>
  {% endif %}
</div>
{% endblock %}
