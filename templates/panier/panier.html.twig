{% extends 'base.html.twig' %}

{% block title %}
  Votre Panier
{% endblock %}

{% block body %}

  <div class="bg-light p-3">
    <h1> Votre Panier </h1>
  </div>
  {% if items | length > 0 %}
    <table class='table'>
      <thead>
        <tr>
          <th>Produit</th>
          <th>Prix</th>
          <th>Quantit√©</th>
          <th>Total</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {% for item in items %}
          <tr>
            <td>{{ item.produit.nom }}</td>
            <td>{{ item.produit.prix }}</td>
            <td>{{ item.quantite }}</td>
            <td>{{ item.produit.prix * item.quantite }}</td>
            <td>
              <a href="{{ path('cart_remove', {'id': item.produit.id})}}" class="btn btn-danger btn-sm" >Supprimer
              </a>
            </td>
          </tr>
          
        {% endfor %}
      </tbody>
      <tfoot>
        <tr>
          <td colspan="3" class="text-right">Total :</td>
          <td>{{ total }}</td>
          <td></td>
        </tr>
      </tfoot>
    </table>
  {% else %}
    <p>Surprise, c'est vide !</p>
  {% endif %}
{% endblock %}
