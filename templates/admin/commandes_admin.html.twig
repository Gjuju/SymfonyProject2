{% extends 'base.html.twig' %}


{% block title %}Détail produit
{% endblock %}

{% block body %}

	<h1 class="text-center mb-5">Détails commandes Admin: </h1>


	{% for commande in commandes %}
		<div class="container">
			<div class="card " style="height: 100px">
				<div class="row no-gutters justify-content-around" style="padding-top:26px">
					<div class="col-3 ml-5">
						<h5 class="ml-2">Date-Heure :</h5>
						<h6 class="card-text " {{commande.createdAt|date("d/m/Y H:i:s")}}</h6>
					</div>
					<div class="col-3 ">
						<h5>Nom-Prénom :</h5>
						<h6 class="card-text">{{commande.utilisateur}}</h6>
					</div>

					<div class="col-3 ">
						<h5 class="mr-5">ID commande :</h5>
						<h6 class="card-text ml-2">{{commande.id}}</h6>
					</div>
					<div class="col-2 ">
						<a href={{path('commande_detail', {id: commande.utilisateur.id , createdAt: commande.createdAt|date("Y-m-d H:i:s"), idCommande: commande.id} )}}>
							<button class="btn btn-lg btn-primary" type="button">Détails</button>
						</a>
					</div>


				</div>
			</div>
		</div>
	{% endfor %}
	{% endblock %}
