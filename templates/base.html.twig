       <!-- Signin & Signup -->
       <ul id="boutonLoginPanier">
                  {% if is_granted('ROLE_ADMIN') %}
              <a href={{path('compte')}}>
                <button type="button"
                  class="btn btn-outline-danger btn-md"
                  data-toggle="modal"
                  data-target=".login-register-form">
                  Mon Compte Admin
                </button>
                <span class="glyphicon glyphicon-user"></span>
              </a>
              {% elseif is_granted('ROLE_USER') %}
              <a href={{path('compte')}}>
                <button type="button"
                  class="btn btn-success btn-md"
                  data-toggle="modal"
                  data-target=".login-register-form">
                  Mon Compte
                </button>
                <span class="glyphicon glyphicon-user"></span>
              </a>
            {% else %}
              <a href={{path('app_login')}}>
                <button type="button"
                  class="btn btn-outline-success btn-md"
                  data-toggle="modal"
                  data-target=".login-register-form">
                  Connexion
                </button>
                <span class="glyphicon glyphicon-user"></span>
              </a>
            {% endif %}
            {% if (is_granted('ROLE_USER')) or (is_granted('ROLE_ADMIN'))   %}
            <a href={{path('panier')}}><button type="button" class="btn btn-warning btn-md">
            {% else %}
            <a href={{path('cart_pasco_panier')}}><button type="button" class="btn btn-warning btn-md">
            {% endif %}
            <img src="/img/icons8-caddie-24.png" alt="Logo Panier"> Panier </button></a>
                      
