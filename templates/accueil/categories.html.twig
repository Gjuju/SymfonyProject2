{% extends 'base.html.twig' %}

{% block title %}
  Catégories
{% endblock %}

{% block body %}
<div class="TitreCategorie">
  <h1>Toutes nos catégories</h1>
</div>
  <div class="container d-flex justify-content-center mt-50 mb-50">
    <div class="row">
      {% for categorie in categories %}
        <div class="col-md-4 mt-2">
          <div class="card">
            <div class="card-body">
              <div class="card-img-actions">
              <a href={{ path('categorie' , { id: categorie.id }) }}><img src={{ categorie.photo }} class="card-img img-fluid" alt="" /></a>
              </div>
            </div>
            <div class="card-body bg-light text-center">
              <div class="mb-2">
                <h2 class="font-weight-semibold mb-2">
                  <a href={{ path('categorie' , { id: categorie.id }) }} class="text-uppercase text-warning mb-2" data-abc="true">
                    {{ categorie }}
                  </a>
                </h2>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
<div class="NbProduit">

  {% if previous >= 0 %}
    <a href="{{
      path(
        'accueil',
        {
          offset: previous
        }
      )
      }}"
      class="btn btn sm btn primary">
      <<
    </a>
  {% endif %}Il y a {{ (categories|length) ~ ' catégorie'
    ~ ((categories|length) > 1 ? 's' : '') }}
  {% if next < (categories|length) %}
    <a href="{{
      path(
        'accueil',
        {
          offset: next
        }
      )
      }}"
      class="btn btn sm btn primary">
      >>
    </a>
  {% endif %}
  </div>
{% endblock %}
